# Vercel Postgres
# These will be automatically added when you create a Postgres database in Vercel
# For local development, copy this to .env.local and fill in your values

POSTGRES_URL="your-postgres-url"
POSTGRES_PRISMA_URL="your-prisma-url"
POSTGRES_URL_NON_POOLING="your-non-pooling-url"
POSTGRES_USER="your-user"
POSTGRES_HOST="your-host"
POSTGRES_PASSWORD="your-password"
POSTGRES_DATABASE="your-database"

# Privy Configuration
# 1. Create app at https://console.privy.id/
# 2. Copy your App ID
# 3. Go to: User management → Global Wallet → Integrations
# 4. Enable Ethos Network integration and copy Ethos Provider App ID
NEXT_PUBLIC_PRIVY_APP_ID="your-privy-app-id"
NEXT_PUBLIC_ETHOS_PROVIDER_APP_ID="your-ethos-provider-app-id"

# Session Secret
# Generate with: openssl rand -base64 32
SESSION_SECRET="your-session-secret-change-this"

# Ethos Network OAuth Credentials
# Get these from: https://ethos.network/oauth/applications
ETHOS_CLIENT_ID="your-ethos-client-id"
ETHOS_CLIENT_SECRET="your-ethos-client-secret"

# Application Domain
# Used for generating public URLs (e.g., repgateway.xyz)
NEXT_PUBLIC_APP_DOMAIN="repgateway.xyz"

# Base URL (optional - auto-detected in production)
NEXT_PUBLIC_BASE_URL="http://localhost:3000"
